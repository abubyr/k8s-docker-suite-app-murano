FormatVersion: 2.0.0
Version: 1.0.0
Name: Register Kubernetes Node

Parameters:
  name: $name
  nodeId: $nodeId

Body: |
  return register('{0} {1}'.format(args.name, args.nodeId)).stdout

Scripts:
  register:
    Type: Application
    Version: 1.0.0
    EntryPoint: kube-add-node.sh
    Files:
      - minion-node.json

    Options:
      captureStdout: true
      captureStderr: true
